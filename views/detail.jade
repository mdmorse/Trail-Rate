extends layout

block content
    header

        .btn-group.btn-group-justified
            a.btn.btn-default(href= '/') Home
                .glyphicon.glyphicon-tree-conifer  
            for trail in trails
                a.btn.btn-default(href= '/' + trail.name)= trail.name
         
        .logo-bar 
            .img-wrapper
                h1 
                    span= trail.location

                img(src = 'http://cdn01.wallconvert.com/_media/wallpapers_1366x768/1/2/black-hills-and-white-mountains-11641.jpg')
    
    #location-wrapper
        h2= trail.location
        p= trail.description